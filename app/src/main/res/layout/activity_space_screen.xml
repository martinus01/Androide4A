<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_screen_fond"
    tools:context=".presentation.main.SpaceScreenActivity">

  <ImageView
      android:id="@+id/image_icon"
      android:layout_width="333dp"
      android:layout_height="343dp"
      android:src="@drawable/rocket_logo"
      android:layout_centerInParent="true"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      />

  <TextView
      android:id="@+id/Splash_title"
      android:layout_width="161dp"
      android:layout_height="33dp"
      android:layout_below="@+id/image_icon"
      android:textColor="@color/ColorSplashText"
      android:textSize="25dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.494"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/image_icon"
      android:layout_centerHorizontal="true"
      app:layout_constraintVertical_bias="0.172"
      android:text="@string/app_name" />

</RelativeLayout>